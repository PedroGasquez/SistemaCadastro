@model ContatoModel
@{
    ViewData["Title"] = "Confirmacao de apagar o Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2">
    <a class="btn btn-primary text-center" role="button" asp-action="Index" asp-controller="Index">Cancelar exclusao</a>
    <a class="btn btn-danger btn-block" role="button" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Confirmar exclusao</a>
</div>