@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1>Editar Contato</h1>

</div>


<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o celular do contato">
    </div>

    <br />
    
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Alterar</button>
        <a class="btn btn-secondary btn-lg btn-block" asp-asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>

</form>